# You will need to create a .env file following this file as a guide

# Docker Configuration (supports multiple hosts)
# Each host requires DOCKER_HOST_N and optionally DOCKER_HOST_PORT_N and DOCKER_HOST_NAME_N
DOCKER_HOST_1=""
DOCKER_HOST_PORT_1="2375"
DOCKER_HOST_NAME_1=""

# Example second host (uncomment to use)
# DOCKER_HOST_2=""
# DOCKER_HOST_PORT_2="2375"
# DOCKER_HOST_NAME_2=""

# ZFS Configuration (supports multiple hosts)
# Each host requires ZFS_HOST_N and ZFS_HOST_USER_N
ZFS_HOST_1=""
ZFS_HOST_PORT_1="22"
ZFS_HOST_NAME_1=""
ZFS_HOST_USER_1=""
ZFS_HOST_PASSWORD_1=""
ZFS_HOST_KEY_PATH_1=""
ZFS_HOST_KEY_PASSPHRASE_1=""

# Example second host (uncomment to use)
# ZFS_HOST_2=""
# ZFS_HOST_PORT_2="22"
# ZFS_HOST_NAME_2=""
# ZFS_HOST_USER_2=""
# ZFS_HOST_PASSWORD_2=""

# PostgreSQL Configuration
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="homelab"
POSTGRES_USER="homelab"
POSTGRES_PASSWORD="changeme"
POSTGRES_SSL="false"
POSTGRES_POOL_SIZE="10"

# Background Worker Configuration
WORKER_ENABLED="true"
WORKER_DOCKER_ENABLED="true"
WORKER_ZFS_ENABLED="false"
WORKER_COLLECTION_INTERVAL_MS="1000"
WORKER_BATCH_SIZE="10"
WORKER_BATCH_TIMEOUT_MS="1000"

# Web Server Configuration
WEB_PORT="3000"
